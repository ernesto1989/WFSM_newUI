<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flows - <%=scenarioId%> </title>
    <link rel="stylesheet" type="text/css" href="https://rawgit.com/vitmalina/w2ui/master/dist/w2ui.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        html,
        body{
            height: 100%;
        }
        
        .container-fluid {
            height:93%
        }

        #content-grid {
            margin:auto;
            width: 98%;
            height: 95%;
            padding: 2px;
        }
    </style>  
    <script type="module">

        import { w2grid, w2utils } from 'https://rawgit.com/vitmalina/w2ui/master/dist/w2ui.es6.min.js'

        $("document").ready(function(){
            $.get("/WF/api/getFlows/<%=scenarioId%>", function(data, status){
                let recs = data.records;
                grid.records = recs;
                grid.refresh();
            });
        })

        let grid = new w2grid({
            name: 'grid',
            box: '#content-grid',
            header  : 'Flows - <%=scenarioId%> - Flow in: <%=capacity_units%>/<%=time_units%>',
            show: {
                header:true,
                toolbar: true,
                toolbarAdd: true,
                toolbarDelete: true,
                toolbarSave: true,
                toolbarEdit: true
            },  
            searches: [
                { field: 'recid', label: 'ID ', type: 'int' },
                { field: 'origin_node', label: 'Origin', type: 'text' },
                { field: 'destiny_node', label: 'Destiny', type: 'text' },
                { field: 'type', label: 'Type', type: 'text' }
            ],          
            columns: [
                { field: 'recid', text: 'Id',sortable:true,size:'5%' },
                { field: 'origin', hidden:true },
                { field: 'origin_node', text: 'Origin',sortable:true, size:'10%' },
                { field: 'destiny', hidden:true },
                { field: 'destiny_node', text: 'Destiny',sortable:true, size:'10%' },
                { field: 'type', text: 'Min V.', size:'10%' },
                { field: 'current_flow', text: 'Current',sortable:true, size:'15%',render:'float:02' },
                { field: 'fmin', text: 'Min F', size:'15%',sortable:true,render:'float:02' },
                { field: 'fmax', text: 'Max F.', size:'15%',sortable:true,render:'float:02' }
            ],
            onAdd: function (event) {
                w2alert('add');
            },
            onEdit: function (event) {
                w2alert('edit');
            },
            onDelete: function (event) {
                console.log('delete has default behavior');
            },
            onSave: function (event) {
                w2alert('save');
            }
        });
    </script>
</head>
<body>
    <div class="container-fluid" style="width:100%;height:100%;">
        <div id="content-grid" style="width:95%;height:95%;margin: 5px;">
            flows gird
        </div>
    </div>
</body>
</html>